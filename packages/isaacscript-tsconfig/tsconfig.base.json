// This is a tsconfig.json intended to be used as a base for all TypeScript projects.
{
  // We extend the strictest base config:
  // https://github.com/tsconfig/bases/blob/main/bases/strictest.json
  "extends": "@tsconfig/strictest/tsconfig.json",

  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    // We prefer the "no-fallthrough" ESLint rule over the "noFallthroughCasesInSwitch" compiler
    // flag, as this does not have to do with types.
    "noFallthroughCasesInSwitch": false,

    // We prefer the "@typescript-eslint/no-unused-vars" ESLint rule over the "noUnusedLocals" and
    // "noUnusedParameters" compiler flags, since unused local variables can be useful while
    // debugging. Furthermore, the ESLint rule has the ability to ignore certain specific variable
    // prefixes, while the TypeScript version does not.
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // The "importsNotUsedAsValues" is only useful in very specific transpilation environments, so
    // the verbosity of having to use the special `import type` syntax everywhere is not needed 99%
    // of the time.
    "importsNotUsedAsValues": "remove",

    // "newLine" specifies the end of line sequence. By default, this is "crlf" on Windows. We want
    // to always use "lf" to be consistent with all platforms and reduce the file size of the
    // output.
    "newLine": "lf",
  },
}
