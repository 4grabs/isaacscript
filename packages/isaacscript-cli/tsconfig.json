{
  "extends": "../../tsconfig.json",

  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "outDir": "../../dist",

    // Both the "Ajv" and "sync-directory" libraries do not support ESM yet.
    // https://github.com/ajv-validator/ajv/pull/2166
    // https://github.com/hoperyy/sync-directory/issues/54
    // Thus, we have to manually revert the ESM options from the base config.
    "module": "CommonJS",
    "moduleResolution": "node",
  },

  // Nx will not include ".eslintrc.cjs" in the build output, so there is no need for a
  // "tsconfig.eslint.json" file.
  "include": [
    "./src/**/*.ts",
    "./file-templates/static-mod/.prettierrc.cjs",
    "./file-templates/static-mod/.eslintrc.template.cjs",
    "./file-templates/static-ts/.prettierrc.cjs",
    "./file-templates/static-ts/.eslintrc.template.cjs",
    ".eslintrc.cjs",
  ],
}
